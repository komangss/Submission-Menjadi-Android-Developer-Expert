<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.submissionMade">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.dicoding.submissionMade.READ_DATABASE"
        android:protectionLevel="normal" />

    <permission
        android:name="com.dicoding.submissionMade.WRITE_DATABASE"
        android:protectionLevel="normal" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.dicoding.submissionMade.activity.FavoriteTvShowActivity" />
        <activity android:name="com.dicoding.submissionMade.activity.FavoriteMovieActivity" />
        <activity android:name="com.dicoding.submissionMade.activity.DetailTvShowActivity" />
        <activity android:name="com.dicoding.submissionMade.activity.DetailMovieActivity" />

        <provider
            android:name=".provider.MovieProvider"
            android:authorities="com.dicoding.submissionMade"
            android:exported="true"
            android:readPermission="com.dicoding.submissionMade.READ_DATABASE"
            android:writePermission="com.dicoding.submissionMade.WRITE_DATABASE" />

        <activity
            android:name="com.dicoding.submissionMade.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>